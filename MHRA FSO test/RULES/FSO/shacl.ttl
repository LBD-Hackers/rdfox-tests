:ComponentExchangeFluidShape a sh:NodeShape;
    sh:targetClass fso:Component ;
    sh:property [
        sh:path fso:exchangesFluidWith ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:severity sh:Warning ;
        sh:message "Segments must exchange fluid with other components (Or else, they are unconnected)"@en
    ] .

:ComponentFeedsShape a sh:NodeShape;
    sh:targetClass fso:Component ;
    sh:property [
        sh:path fso:feedsFluidTo ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:severity sh:Warning ;
        sh:message "Components must feed other components"@en
    ] .

:ComponentFedByShape a sh:NodeShape;
    sh:targetClass fso:Component ;
    sh:property [
        sh:path fso:hasFluidFedBy ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:severity sh:Warning ;
        sh:message "Components must have fluid fed by other components"@en
    ] .